<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3ed2a8"
    tools:context=".ui.fragment.SeeItem.DuBaoThoiTiet.DuBaoThoiTietMainFragment">

    <TextView
        android:id="@+id/txtTenSanGolf"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên Sân Golf"
        android:fontFamily="serif"
        android:textStyle="bold|italic"
        android:textColor="#050599"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtDiaDiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Thành phố"
        android:fontFamily="serif"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/txtNhietDo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Nhiệt độ"
        android:textColor="#da0311"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/txtTrangThai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="Trạng Thái"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">

            <ImageView
                android:id="@+id/imgDoAm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@drawable/humidity" />

            <TextView
                android:id="@+id/txtDoAm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Độ ẩm" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">
           <FrameLayout
               android:layout_weight="2"
               android:layout_width="match_parent"
               android:layout_height="0dp">
               <ImageView
                   android:id="@+id/imgMay"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"
                   android:src="@drawable/cloud" />
               <ProgressBar
                   android:id="@+id/progressBar_loading"
                   style="?android:attr/progressBarStyleLarge"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_gravity="center"
                   android:indeterminateDrawable="@drawable/progress" />
           </FrameLayout>


            <TextView
                android:id="@+id/txtMay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Mây" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">

            <ImageView
                android:id="@+id/imgGio"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@drawable/mill" />

            <TextView
                android:id="@+id/txtGio"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Gió" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/txtNgay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Ngày cập nhật"
        android:textColor="#f8060606"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnXemCacNgayKhac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Các ngày tiếp theo" />

</LinearLayout>
